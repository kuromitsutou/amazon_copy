.user-wrapper
  = render "devise/shared/header"

  .user-box.registration-box
    %h1.bottom-margin-s アカウントを作成
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .field.bottom-margin-base
        = f.label :name, "名前"
        = f.text_field :name, autofocus: true, autocomplete: "name", class: "text"
      .field.bottom-margin-base
        = f.label :name_kana, "フリガナ"
        = f.text_field :name_kana, autofocus: true, autocomplete: "name_kana", class: "text"
      .field.bottom-margin-base
        = f.label :email, "Eメールアドレス"
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "text"
      .field
        = f.label :password, "パスワード"
        = f.password_field :password, autocomplete: "off", placeholder: "最低#{@minimum_password_length}文字必要です。", class: "text"
      .password-info.bottom-margin-base
        %span.password-info__icon.sprite-user
        %span.password-info__message パスワードの長さは最低6文字です。
      .field.bottom-margin-base
        = f.label :password_confirmation, "もう一度パスワードを入力してください"
        = f.password_field :password_confirmation, autocomplete: "off", class: "text"
      .actions.bottom-margin-m
        = f.submit "Amazonアカウントを作成", class: "yellow-button"
      .legal-text
        = precede "サインインすることにより、当社の" do
          = link_to '利用規約', '#'
        = precede "および"
          = link_to 'プライバシー規約', '#'
        = "に同意したとみなされます。"s
      = link_to "サインイン", new_session_path(resource_name)

  = render "devise/shared/footer"
